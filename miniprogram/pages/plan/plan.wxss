/* miniprogram/pages/plan/plan.wxss */
.contain{
  width: 100%;
  margin: auto;
}
.background{
  width: 100%;
  height: 100%;
  opacity: 0.7;
  position:fixed; 
  background-size:100% 100%;
  z-index: -1;
}
.title{
  text-align: center;
  font-size: 2rem;
  color: #019f46;
  padding-top: 5px;
  padding-bottom: 10px;
}
.pic{
  width:100%;
  height:350px;
  zoom: 1;
  background-color: #fff;
  background-repeat: no-repeat;
  background-size: cover;
  -webkit-background-size: cover;
  -o-background-size: cover;
  background-position: center 0;
}
.content{
  width: 95%;
  margin: auto;
  background-color: #fff;
  opacity: 0.8;
  margin-top: 10px;
  padding: 15px 5px;
  line-height: 1.8rem;
}
.bookname{
  font-weight: bold;
  font-size: 1.3rem;
  line-height: 2.3rem;
}
.submit{
  margin-top: 50px;
  padding-bottom: 100px;
}