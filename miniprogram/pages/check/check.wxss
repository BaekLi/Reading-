  margin-bottom: 10px;

}
.background{
  width: 100%;
  height: 150px;
  opacity: 0.7;
  position:fixed; 
  background-size:100% 100%;
  z-index: -1;
}
.pic-rili{
  width: 40%;
  float: left;
  padding-left: 20px;
}
.pic-rili image{width: 150px;height: 150px;}
.intro{
  padding-top: 25px;
  line-height: 3rem;
  font-size: 1.2rem;
  color: #000;
}
.calendar_title{width: 100%; margin: 50rpx auto; font-size: 20pt;color: #000;justify-content:center;display: flex;flex-direction: row;}
.riqi{float: left;text-align: center;}
.calendar_title .icon image{width: 60rpx; height: 60rpx;margin: 5rpx auto;float: left;}

/* 日历 */
.calendar{width: 94%;margin-left: 3%;margin-top: 20rpx;background: #fff;border-bottom-right-radius: 20rpx;border-bottom-left-radius: 20rpx;padding: 0 0 20rpx;font-family: FZZhunYuan-M02S;}
.header{font-size: 0;width: 80%;margin: 0 auto;}
.header>view{display: inline-block;width: 14.285%;color: #666;font-size: 30rpx;text-align: center;border-bottom: 1px solid #D0D0D0;padding: 20rpx 0;}
.weekMark{position: relative;width: 80%;margin: 0 auto;}
.weekMark view{position: absolute;bottom: 0;left: 0;width: 100%;border-bottom: 2px solid #35aa68;}
.date-box{font-size: 0;padding: 10rpx 0;width: 80%;margin: 0 auto;}
.date-box>view{position: relative;display: inline-block;width: 14.285%;color: #666;text-align: center;vertical-align: middle;}
.date-head{height: 60rpx;line-height: 60rpx;font-size: 12pt;}
.nowDay .date-head{width: 60rpx;border-radius: 50%;text-align: center;color: #fff;background-color: #ff9933;margin: 0 auto;}
.checkDay .date-head{width: 60rpx;border-radius: 50%;text-align: center;color: #fff;background-color: #35aa68;margin: 0 auto;}
.btn{
  background-color:#35aa68;
  color:#FFF;
  border-radius: 15px;
  margin-top: 50px;
  margin-bottom: 50px;
}